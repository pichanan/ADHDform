<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="adhd.sirikan.pimpicha.adhdform.GraphCompare2Activity">


    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <LinearLayout

            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryDark"
                android:weightSum="1">

                <Button
                    android:id="@+id/backfromcompare2"
                    android:layout_width="47dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/back"
                    android:layout_weight="0.05" />

                <TextView
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:id="@+id/textView14"
                    android:textSize="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.61"
                    android:text="THASS" />

                <Button
                    android:id="@+id/takeScreen2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/button"
                    android:text="Save Pic" />

            </LinearLayout>

            <com.jjoe64.graphview.GraphView
                android:layout_margin="@dimen/fab_margin"
                android:layout_width="match_parent"
                android:layout_height="200dip"
                android:title="Graph Title"
                android:id="@+id/compareGraphThass"
                />
            <LinearLayout
                android:gravity="center"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/txtDateToday2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <LinearLayout
                android:layout_marginBottom="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/yel"
                    android:layout_marginLeft="20dp"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    />
                <TextView
                    android:text="สีเหลืองแท่งแรกคือความเสี่ยงด้านซน วู่วามของแบบประเมินที่ทำในวันนี้ \nสีเหลืองแท่งที่2คือความเสี่ยงด้านซน วู่วามของแบบประเมินที่ทำในอีตที่เลือกมาเปรียบเทียบ"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginBottom="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/green"
                    android:layout_marginLeft="20dp"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    />
                <TextView
                    android:text="สีเขียวแท่งแรกคือความเสี่ยงด้านอาการขาดสมาธิของแบบประเมินที่ทำในวันนี้ \nสีเขียวแท่งที่2คือความเสี่ยงด้านอาการขาดสมาธิของแบบประเมินที่ทำในอีตที่เลือกมาเปรียบเทียบ"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginBottom="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/blue"
                    android:layout_marginLeft="20dp"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    />
                <TextView
                    android:text="สีน้ำเงินแท่งแรกคือความเสี่ยงโดยรวมของแบบประเมินที่ทำในวันนี้ \nสีน้ำเงินแท่งที่2คือความเสี่ยงโดยรวมของแบบประเมินที่ทำในอีตที่เลือกมาเปรียบเทียบ"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
