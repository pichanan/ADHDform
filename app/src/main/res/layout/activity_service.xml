<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="adhd.sirikan.pimpicha.adhdform.ServiceActivity"
    android:orientation="vertical">

    <RelativeLayout
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_layout">

        <ImageView
            android:id="@+id/imvGraph"
            android:layout_marginTop="31dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_user"/>

        <ImageView
            android:id="@+id/imvChild"
            android:src="@mipmap/ic_launcher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="31dp"
            android:layout_alignTop="@+id/txtUser"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="31dp" />

        <TextView
            android:id="@+id/txtUser"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/my_margin2"
            android:textColor="#fbf9f9"
            android:textSize="@dimen/h1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="test"/>

        <TextView
            android:id="@+id/txtType"
            android:layout_centerHorizontal="true"
            android:textColor="#fbf9f9"
            android:textSize="@dimen/h1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtUser"
            android:text="test"/>



    </RelativeLayout>

    <ListView
        android:id="@+id/livChild"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></ListView>


</LinearLayout>



