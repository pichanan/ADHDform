<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="adhd.sirikan.pimpicha.adhdform.PDF2Activity">

    <Button
        android:id="@+id/button_createThass"
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:text="Create PDF"

        android:layout_marginTop="126dp"
        android:layout_marginRight="57dp"
        android:layout_marginEnd="57dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/button_notcreateThass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NO"
        android:layout_alignBaseline="@+id/button_createThass"
        android:layout_alignBottom="@+id/button_createThass"
        android:layout_toLeftOf="@+id/button_createThass"
        android:layout_toStartOf="@+id/button_createThass"
        android:layout_marginRight="52dp"
        android:layout_marginEnd="52dp" />
</RelativeLayout>
