<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center"
    tools:context="adhd.sirikan.pimpicha.adhdform.TreeTestActivity">
    <LinearLayout
        android:background="@color/colorPrimaryDark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/backfromTreetest"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back"/>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="197dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/lvbg2"
            android:orientation="horizontal"
            android:padding="20dp">

            <Button
                android:id="@+id/buttonSnap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/button"
                android:ems="5"
                android:src="@drawable/snap"
                android:text="SNAP-IV" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:text="@string/StrSnap">

            </TextView>
        </LinearLayout>

        <LinearLayout
        android:background="@drawable/lvbg2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:padding="20dp">

        <Button
            android:id="@+id/buttonThass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/button"
            android:ems="5"
            android:src="@drawable/snap"
            android:text="THASS" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="168dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:text="@string/strThass">

        </TextView>
    </LinearLayout>
    <LinearLayout
        android:background="@drawable/lvbg2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:padding="20dp">

        <Button
            android:id="@+id/buttonSdq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/button"
            android:ems="5"
            android:src="@drawable/snap"
            android:text="SDQ" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="196dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:text="@string/strSdq">

        </TextView>
    </LinearLayout>
    </LinearLayout>
    </ScrollView>

</LinearLayout>
